.payContainer {
    height: 100%;
    width: 100%;
    background: #EBEBEB;
    overflow: hidden;
}

.payContentContainer {
    width: 700rpx;
    margin: 25rpx auto;
    min-height: 460rpx;
    background: #fff;
    border-radius: 10rpx;
    overflow: hidden;
}

.payContentContainer .shopInfoContainer {
    background: #F5F5F5;
    width: 100%;
    height: 130rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.shopInfoContainer .shopLogo {
    width: 80rpx;
    height: 80rpx;
    display: block;
    margin-right: 20rpx;
}

.shopInfoContainer .shopName {
    font-size: 30rpx;
    color: #333;
}

.payContentContainer .payNumberContainer {
    background: #fff;
    width: 100%;
    height: 165rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
    padding: 0 45rpx;
}

.payNumWord {
    font-size: 34rpx;
    color: #777372;
}

.payNumberContainer .payNumber {
    min-width: 100rpx;
    height: 70rpx;
    position: relative;
    font-size: 70rpx;
    line-height: 70rpx;
    padding: 0 10rpx;
    color: #333;
}

.payNumberContainer .payNumber::before {
    content: '￥';
    font-size: 38rpx;
    position: absolute;
    left: -38rpx;
    top: 0;
    color: #777272;
    font-family: "微软雅黑"
}

.payNumberContainer .payNumber.active::after {
    content: '';
    display: block;
    width: 4rpx;
    height: 70rpx;
    position: absolute;
    background: red;
    left: 0;
    top: 0;
}

.active {
    background: red;
}

.payContentContainer .discountContainer {
    background: #fff;
    width: 100%;
    height: 105rpx;
    box-sizing: border-box;
    border-top: 2rpx solid #EBEBEB;
    box-sizing: border-box;
    padding: 0 45rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.discountContainer .discountMarks {
    color: #C4BAB0;
    font-size: 22rpx;
}

.discountContainer .discountdNumber {
    position: relative;
    font-size: 40rpx;
    color: #FF5001;
    line-height: 40rpx;
    padding: 0 10rpx;
}

.discountContainer .discountdNumber::before {
    content: '￥';
    font-size: 30rpx;
    position: absolute;
    left: -38rpx;
    top: 0;
    color: inherit;
    font-family: "微软雅黑"
}

.payContentContainer .messageContainer {
    background: #fff;
    width: 100%;
    height: 60rpx;
    background: pink;
    box-sizing: border-box;
    padding: 0 45rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}